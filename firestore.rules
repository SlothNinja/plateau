rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Committed/{gid}/View/{uid}/{document=**} {
      allow read: if request.auth.uid == 0;
    }
    match /Committed/{gid}/View/{uid}/{document=**} {
      allow read, write: if request.auth.uid == uid;
    }
    match /Game/{document=**} {
      allow read, write;
    }
    match /Invitation/{document=**} {
      allow read, write;
    }
  }
}
