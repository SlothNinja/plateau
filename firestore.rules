rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Stack/{gid}/For/{uid}/{document=**} {
      allow read: if request.auth.uid == uid;
    }
    match /Committed/{gid}/View/{uid}/{document=**} {
      allow read: if request.auth.uid == uid || uid == '0';
    }
    match /Committed/{gid}/Cached/{uid}/Current/{document=**} {
      allow read: if request.auth.uid == uid;
    }
    match /Committed/{gid}/Messages/{document=**} {
      allow read: if true;
    }
    match /Invitation/{document=**} {
      allow read: if true;
    }
    match /Index/{document=**} {
      allow read: if true;
    }
  }
}
